<h3>Vista de productos</h3>
{{#if productos}}
  <div class="table-responsive">
    <table class="table table-dark">
      <tr class="text-warning">
        <th class="font-weight-bold">Nombre</th>
        <th class="font-weight-bold">Precio</th>
        <th class="font-weight-bold">Foto URL</th>
      </tr>
      {{#each productos}}
        <tr>
          <td><h4
              style="font-family: monospace; text-align: center; font-size: large; color: whitesmoke"
            >{{this.nombre}}</h4></td>
          <td>{{this.precio}}</td>
          <td><div style="height: 80px; width: 80px; margin 16px;">
              <img
                src={{this.fotoUrl}}
                alt={{this.id}}
                style="width: 100%; min-height: 100%; max-height: 100%; border-radius: 25px"
              />
            </div></td>
          <div>

          </div>
        </tr>
      {{/each}}
    </table>
  </div>
{{else}}
  <h3 class="alert alert-danger">No se encontraron datos</h3>
{{/if}}