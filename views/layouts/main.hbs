{{#if loggedIn}}
    <div class="jumbotron container mt-3" style="padding: 20px;">
        {{> welcomeUser}}
    </div>
    <div class="jumbotron container mt-3">
        {{> addProducts}}
        {{> historyProducts}}
    </div>
    <div class="jumbotron container mt-3">
        {{> messagesCenter}}
    </div>
{{else}}
  {{#if loggedOut}}
    <script>
      setTimeout(function () {
        // after 2 seconds
        window.location = "/productos-test";
      }, 2000)
    </script>
    <div class="jumbotron container mt-3" style="padding: 20px;">
      {{> logoutUser}}
    </div>
  {{else}}
    <div class="jumbotron container mt-3">
      {{> loginUser}}
    </div>
  {{/if}}
{{/if}}